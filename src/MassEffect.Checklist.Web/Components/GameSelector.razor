@using MassEffect.Checklist.Web.Components.Logos
@using MassEffect.Checklist.Contracts

<MudLink Href="@($"/check/{GameId}")" Class="select" Style="width: 100%; height: 100%;">
    <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center"
              Style="@($"width: 100%; height: 100%; background-image: url('/assets/img/game-bg-{GameId}.jpg')")">
        @switch (Game)
        {
            case Game.MassEffect1:
                <MassEffectOneLogo/>
                break;
            case Game.MassEffect2:
                <MassEffectTwoLogo/>
                break;
            case Game.MassEffect3:
                <MassEffectThreeLogo/>
                break;
        }
    </MudStack>
</MudLink>

@code {

    [Parameter]
    public Game Game { get; set; }
    
    public int GameId => (int)Game;

}